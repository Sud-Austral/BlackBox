<script>
    function mostrador(seccion1) {
        var arreglo = [
            '#glaciares',
            '#ganaderia',
            '#salud_e',
            '#violencia',
            '#pesca',
            '#agricultura',
            '#educacion',
            '#emisiones',
            '#salud_p',
            '#elecciones',
            '#contaminacion',
            '#ingresoscasen'
