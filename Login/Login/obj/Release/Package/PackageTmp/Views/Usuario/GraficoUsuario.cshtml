@*Productos Datas*@


    <div class="row">
        @if (ViewBag.Resultado.Count >= 0)
        {
            <div class="col-12" style="background-color:black;margin:1%;">



            </div>
        }
        else
        {
            foreach (var item in ViewBag.Resultado)

            {
                <div class="col-md-6 col-xl-3 mb-4">
                    <div class="car card shadow border-left-primary" style="border-radius:15px;">
                        <img class="card-img-top img-fluid" src="@item.URL_IMAGEN" alt="Card image cap">
                        <div class="card-body">
                            <div class="row align-items-center no-gutters d-block">
                                <div class="text-dark font-weight-bold h5 mb-0">@item.NOMBRE</div>
                                <div class="hover_content col mr-2">
                                    <div class="text-dark font-weight-bold h5 mb-0">PRODUCTO</div>
                                    <a href="~/Pagina/ValidadorProductosInternos/@item.ID" target="_blank" style="color:lightblue; font-size:30px !important;"> <div class="text-uppercase text-primary font-weight-bold text-xs mb-1">@item.ID</div></a>
                                    <div class="text-dark font-weight-bold h5 mb-0">COMPROBANTE</div>
                                    <a href="@item.COMPROBANTE" target="_blank" style="color:lightblue;"> <div class="text-uppercase text-primary font-weight-bold text-xs mb-1">@item.COMPROBANTE</div></a>
                                    <div class="text-dark font-weight-bold h5 mb-0">SKU</div>
                                    <div class="text-uppercase text-primary font-weight-bold text-xs mb-1">@item.SKU</div>
                                    <div class="text-dark font-weight-bold h5 mb-0">PRODUCT ID</div>
                                    <div class="text-uppercase text-primary font-weight-bold text-xs mb-1">@item.PRODUCT_ID</div>
                                    <div class="text-dark font-weight-bold h5 mb-0">FECHA</div>
                                    <div class="text-uppercase text-primary font-weight-bold text-xs mb-1">@item.FECHA_CREADO</div>
                                </div>

                                @*<div class="col-auto"><i class="fas fa-calendar fa-2x text-gray-300"></i></div>*@
                            </div>
                        </div>
                    </div>
                </div>
            }

        }

    </div>
    @*Productos Datas*@
    <div class="container-fluid offset-1">
        <div class="row ">
            <div class="col-8">
                <h3 class="text-dark mb-0">Productos Datas</h3>
                <hr style="border:0.5px solid #000000" />
            </div>
        </div>

        <div class="row">
            <div class="col">
                @*<P><strong> Se muestran <span>@ViewBag.Resultado.Count </span>resultados de Repotes 360°</strong></P>*@
            </div>
        </div>
        <div class="responsive row " style="overflow:scroll;height:300px;overflow-x:hidden; width:67%;">
            @foreach (var item in ViewBag.Resultado)

            {
                <div class="col-8">
                    <div class="row ">
                        <div class="col-2">
                            <img class="img-fluid mb-3" src="@item.URL_IMAGEN">
                        </div>
                        <div class="col-9 text-dark font-weight-bold mb-0" style="color:#518bb3 !important;cursor: pointer;">
                            <a onclick="mostrador('#doce'); ProductoSuscripcion('@item.SKU', '@item.NOMBRE');">
                                @item.NOMBRE <br />
                                @item.FECHA_CREADO
                            </a>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
